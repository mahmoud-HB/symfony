{% extends 'base.html.twig' %}

{% block body %}
    <h1>Types</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ type.nom }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ type.langue }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('types_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('types_edit', { 'id': type.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
