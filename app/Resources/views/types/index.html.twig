{% extends 'base.html.twig' %}

{% block body %}
    {% block fil_ariane %}
        <ol class="breadcrumb record_actions">
            <li><a href="{{ path('produits_index') }}">Liste des produits</a></li>
            <li class="active"><em>Listes types</em></li>
        </ol>
    {% endblock fil_ariane %}
    <h1>Types list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Langue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td><a href="{{ path('types_show', { 'id': type.id }) }}">{{ type.id }}</a></td>
                <td>{{ type.nom }}</td>
                <td>{{ type.langue }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('types_show', { 'id': type.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('types_edit', { 'id': type.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('types_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
